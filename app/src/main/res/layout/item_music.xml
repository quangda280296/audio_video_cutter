<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        style="@style/match_wrap"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints">

        <com.vietmobi.mobile.audiovideocutter.ui.widgets.imageview.CircleImageView
            android:id="@+id/image_music"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_music"
            app:layout_constraintBottom_toTopOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="@id/image_music"
            app:layout_constraintEnd_toStartOf="@id/popup_menu"
            app:layout_constraintStart_toEndOf="@id/image_music"
            app:layout_constraintTop_toTopOf="@id/image_music">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten bai hat"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/music_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten bai hat"
                android:textColor="@color/white" />
        </LinearLayout>


        <com.vietmobi.mobile.audiovideocutter.ui.widgets.imageview.ImageSquare
            android:id="@+id/popup_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_popup_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.4"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>